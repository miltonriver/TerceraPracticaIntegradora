<div>
    <h1>Usuarios</h1>
    <section class="listCollection">
        {{#each users}}
        <ul>
            <h2>User Nº{{increment @index}} </h2>
            <li><b>Nombre completo: </b> {{this.first_name}} {{this.last_name}}</li>
            {{!-- <li><b>Apellido: </b> {{this.last_name}}</li> --}}
            <li><b>Correo Electrónico: </b> {{this.email}} - <b>Género: </b> {{this.gender}}</li>
            {{!-- <li><b>Género: </b> {{this.gender}}</li> --}}
        </ul>
        {{/each}}
    </section>
    <footer class="pageFooter">
        {{#if hasPrevPage}}
        <a href="/users?pageQuery={{prevPage}}" class="pageBreak">Anterior</a>
        {{/if}}
        <label class="pageFoot">Página {{page}} de {{totalPages}} </label>
        {{#if hasNextPage}}
        <a href="/users?pageQuery={{nextPage}}" class="pageBreak">Siguiente</a>
        {{/if}}
    </footer>
</div>